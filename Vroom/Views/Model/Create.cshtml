@model Vroom.Models.ViewModels.ModelViewModel

@{
    ViewData["Title"] = "Create";
}

<br></br>

<h2 class="text-info"> Add Model of Vehicle </h2>

<form action="Create" method="post">
    <input type="hidden" asp-for="Makes" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="input-group row">
        <div class="col-1">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-4">
            <select asp-for="Model.MakeId" asp-items="Model.CSelectListItems(Model.Makes)" class="form-control"></select>
        </div>
    </div>
    <br />
    <div class="input-group row">
        <div class="col-1">
            <label asp-for="Model.Name"></label>
        </div>
        <div class="col-4">
            <input asp-for="Model.Name" class="input-group" />
        </div>
        <span asp-validation-for="Model.Name" class="text-danger"></span>
    </div>
    <br />
    <div class=" col" style="margin-left:150px">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
